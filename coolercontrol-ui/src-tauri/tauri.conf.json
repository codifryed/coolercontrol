{
    "productName": "coolercontrol",
    "version": "1.4.2",
    "identifier": "org.coolercontrol.CoolerControl",
    "build": {
        "beforeBuildCommand": "npm run build",
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:5173",
        "frontendDist": "../dist"
    },
    "app": {
        "enableGTKAppId": true,
        "security": {
            "csp": null
        },
        "windows": [
            {
                "label": "main",
                "title": "CoolerControl",
                "width": 1600,
                "height": 900,
                "visible": false,
                "minHeight": 400,
                "minWidth": 400,
                "zoomHotkeysEnabled": true
            }
        ],
        "withGlobalTauri": true,
        "trayIcon": {
            "iconPath": "icons/icon.png",
            "iconAsTemplate": false,
            "id": "coolercontrol-system-tray"
        }
    },
    "bundle": {
        "active": true,
        "targets": ["appimage"],
        "category": "Utility",
        "resources": [],
        "shortDescription": "Monitor and control your cooling and other devices",
        "longDescription": null,
        "copyright": "Copyright (c) 2021-2024",
        "externalBin": [],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "linux": {
            "appimage": {
                "bundleMediaFramework": false,
                "files": {}
            }
        }
    },
    "plugins": {
        "cli": {
            "description": "The CoolerControl desktop application",
            "args": []
        }
    }
}
